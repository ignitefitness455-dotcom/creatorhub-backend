# ============================================
# REQUIRED VARIABLES (Must be set for deployment)
# ============================================

# Database (PostgreSQL) - REQUIRED
# Railway/Render will provide this automatically
# Format: postgresql://user:password@host:port/database
DATABASE_URL=""

# JWT Secrets - REQUIRED (min 32 characters each)
# Generate with: openssl rand -base64 32
JWT_SECRET=""
JWT_REFRESH_SECRET=""

# ============================================
# OPTIONAL VARIABLES (Will use defaults if not set)
# ============================================

# JWT Settings
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# AWS S3 (for file storage) - Optional
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET="creatorhub-uploads"
AWS_S3_ENDPOINT=""

# Redis (for caching & queues) - Optional
# If not set, will use in-memory fallback
REDIS_URL=""
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# OpenAI (for AI tools) - Optional
OPENAI_API_KEY=""

# Stripe (for payments) - Optional
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PRICE_BASIC=""
STRIPE_PRICE_PRO=""
STRIPE_PRICE_ENTERPRISE=""

# Email (Resend) - Optional
RESEND_API_KEY=""
EMAIL_FROM="noreply@creatorhub.com"

# App Settings
NODE_ENV="production"
PORT=5000
FRONTEND_URL=""
API_URL=""

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
